struct PotentialFields {
  double temperature;
  std::unordered_map<symbol, DijkstraField> fields;
  std::unordered_map<symbol, Grid<std::optional<UInt>>> potentials;

  inline constexpr auto refreshPotentials(grid_view grid) noexcept -> decltype(auto) {
    std::ranges::for_each(
      fields 
        | std::views::filter([&potentials{potentials}](auto&& _tuple) noexcept {
            auto&& [c, f] = _tuple;
            return not potentials.contains(c)
                or f.recompute;
        }),
      [&potentials{potentials}, dijmap{bindBack(&DijkstraField::dijkstraMap, std::move(grid))}]
      (auto&& _tuple) noexcept {
        auto&& [c, f] = _tuple;
        potentials.insert_or_assign(c, dijmap(f));
      }
    );
  }
  
  inline constexpr auto inversed() const noexcept -> decltype(auto) {
    return fields
      | std::views::filter([](auto&& x) static noexcept {
          return std::get<1>(x).inversed;
      })
      | std::views::transform(monadic::get<0>())
      | std::ranges::to<std::unordered_set>();
  }

  inline constexpr auto likelihood(grid_view grid, const Match& match) noexcept -> decltype(auto) {
    return std::ranges::fold_left(
      std::views::zip(
        mdiota({match.u, toSentinel(match.rule.output.extents)}),
        match.rule.input,
        match.rule.output
      )
      | std::views::filter([&grid, &potentials{potentials}] (auto&& _tuple) noexcept {
          auto&& [u, i, o] = _tuple;
          return o != std::nullopt
             and i != std::nullopt
             and not i->contains(*o)
             and potentials.contains(*o)
             and potentials.at(*o)[u] != std::nullopt
             and potentials.contains(grid[u.z, u.y, u.x])
             and potentials.at(grid[u.z, u.y, u.x])[u] != std::nullopt;
      })
      | std::views::transform([&grid, &potentials{potentials}, inversed{inversed()}] (auto&& _tuple) noexcept -> int {
          auto&& [u, i, o] = _tuple;
          auto&& old_value = grid[u.z, u.y, u.x];
          auto&& new_value = *o;

          const int 
            old_polarity = inversed.contains(old_value)
                        ? -1 : 1,
            new_polarity = inversed.contains(new_value) 
                        ? -1 : 1;

          return (new_polarity * potentials.at(new_value)[u].value())
              - (old_polarity * potentials.at(old_value)[u].value());
      }),
      0, std::plus{}
    );
  }

  inline constexpr auto score(grid_view grid, const Match& m) noexcept -> decltype(auto) {
    expects(not invalid_rule(m.rule));

    const double h = likelihood(std::move(grid), m);
    static auto first_h = std::optional<std::remove_cvref_t<decltype(h)>>{};
    first_h = first_h.value_or(h);

    static auto rg = std::mt19937{std::random_device{}()};
    static auto prob = std::uniform_real_distribution<>{};
    const auto u = prob(rg);

    const auto value = (temperature > 0.0) ? std::pow(u, std::exp((h - *first_h) / temperature)) : (-h + 0.001 * u);
    ensures(value == 0.0 or std::isnormal(value));
    return value;
  }
};

