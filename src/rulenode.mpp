export
struct One : EventTracker, RulesMatcher, PotentialFields {
  One(double temperature, std::unordered_map<symbol, DijkstraField>&& _fields, std::vector<Rule>&& _rules) noexcept
    : EventTracker{},
    RulesMatcher{std::move(_rules)},
    PotentialFields{temperature == 0.0 ? 0.0 : 1.0, std::move(_fields)} {}

  inline constexpr auto operator()(const TracedGrid<symbol>& grid) noexcept -> decltype(auto) {
    auto mdgrid = std::mdspan{std::ranges::cdata(grid), grid.extents};
    RulesMatcher::refreshMatches(mdgrid, EventTracker::getNewEvents(grid.history) | std::ranges::to<std::vector>());

    PotentialFields::refreshPotentials(mdgrid);
    if (not std::ranges::empty(this->potentials)) {
      sort(this->matches, std::ranges::greater{}, bindFront(&PotentialFields::score, this, mdgrid));
    }
    else {
      static auto rg = std::mt19937{std::random_device{}()};
      std::ranges::shuffle(this->matches, rg);
    }

    const auto triggered = std::ranges::find_last_if(this->matches, bindBack(&Match::match, mdgrid));
    auto r = triggered
      | std::views::take(1)
      | std::views::transform(bindBack(&Match::changes, mdgrid))
      | std::views::join
      | std::ranges::to<std::vector>();

    if (std::ranges::empty(triggered)) this->matches.clear();
    else this->matches.erase(std::ranges::begin(triggered), std::ranges::end(triggered));

    return r;
  }
};

export
struct Prl : EventTracker, RulesMatcher {
  Prl(std::vector<Rule>&& x) noexcept
    : RulesMatcher{std::move(x)}, EventTracker{} {}

  inline constexpr auto operator()(const TracedGrid<symbol>& grid) noexcept -> decltype(auto) {
    auto mdgrid = std::mdspan{std::ranges::cdata(grid), grid.extents};
    RulesMatcher::refreshMatches(mdgrid, EventTracker::getNewEvents(grid.history) | std::ranges::to<std::vector>());

    static auto rg = std::mt19937{std::random_device{}()};
    const auto triggered = std::ranges::partition(this->matches, std::not_fn([](auto&& match) static noexcept {
      static auto prob = std::uniform_real_distribution<>{};
      return match.rule.p == 1.0 or prob(rg) <= match.rule.p;
    }));

    auto r = triggered
      | std::views::filter(bindBack(&Match::match, mdgrid))
      | std::views::transform(bindBack(&Match::changes, mdgrid))
      | std::views::join
      | std::ranges::to<std::vector>();

    if (std::ranges::empty(triggered)) this->matches.clear();
    else this->matches.erase(std::ranges::begin(triggered), std::ranges::end(triggered));

    return r;
  }
};

export
struct All : EventTracker, RulesMatcher, PotentialFields {
  All(double temperature, std::unordered_map<symbol, DijkstraField>&& _fields, std::vector<Rule>&& _rules) noexcept
    : EventTracker{},
    RulesMatcher{std::move(_rules)},
    PotentialFields{temperature == 0.0 ? 0.0 : 1.0, std::move(_fields)} {}

  inline constexpr auto operator()(const TracedGrid<symbol>& grid) noexcept -> decltype(auto) {
    const auto mdgrid = std::mdspan{std::ranges::cdata(grid), grid.extents};
    RulesMatcher::refreshMatches(mdgrid, EventTracker::getNewEvents(grid.history) | std::ranges::to<std::vector>());

    PotentialFields::refreshPotentials(mdgrid);
    if (not std::ranges::empty(this->potentials)) {
      sort(this->matches, {}, bindFront(&PotentialFields::score, this, mdgrid));
    }
    else {
      static auto rg = std::mt19937{std::random_device{}()};
      std::ranges::shuffle(this->matches, rg);
    }

    auto filtered = std::ranges::fold_left(
      this->matches,
      std::vector<Match>{},
      [](auto&& result, auto&& match) static noexcept {
        if (std::ranges::none_of(
          result,
          [&match](auto&& visited) noexcept {
            const auto overlap = Area3U{visited.u, toSentinel(visited.rule.output.extents)}
                      .intersect(Area3U{match.u, toSentinel(match.rule.output.extents)});
            return std::ranges::any_of(
              mdiota(overlap),
              [](auto&& p) static noexcept {
                auto&& [v, m] = p;
                return v and m;
              },
              [&visited, &match](auto&& u) noexcept {
                return std::make_tuple(
                  visited.rule.output.at(u - visited.u),
                  match.rule.output.at(u - match.u)
                );
              }
            );
          }
        ))
          result.push_back(std::move(match));
        return result;
      }
    );

    this->matches.clear();

    return std::move(filtered)
      | std::views::transform(bindBack(&Match::changes, mdgrid)) 
      | std::views::join 
      | std::ranges::to<std::vector>();
  }
};